<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Admin.AdminMainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFF"
        android:orientation="horizontal"
        android:translationZ="10dp">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="13dp"
            android:text="Smart Dispatch"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <android.support.v7.widget.CardView
                android:id="@+id/logsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:translationZ="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/logsHeading"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/colorPrimaryDark"
                        android:translationZ="2dp">

                        <View
                            android:id="@+id/divider"
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:background="#FFF" />

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="13dp"
                            android:layout_toRightOf="@+id/divider"
                            android:layout_weight="1"
                            android:text="Logs"
                            android:textColor="#FFF"
                            android:textSize="14dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/logsHeading"
                        android:background="#FEFEFE"
                        android:paddingHorizontal="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:translationZ="10dp">

                        <Button
                            android:id="@+id/cr_textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/border_button"
                            android:fontFamily="sans-serif"
                            android:padding="10dp"
                            android:text="CURRENT REQUEST"
                            android:textAlignment="center"
                            android:textColor="@color/ColorSecondary" />

                        <Button
                            android:id="@+id/rh_textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/cr_textView"
                            android:layout_gravity="end"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/border_button"
                            android:fontFamily="sans-serif"
                            android:padding="10dp"
                            android:text="REQUEST HISTORY"
                            android:textAlignment="center"
                            android:textColor="@color/ColorSecondary" />

                        <Button
                            android:id="@+id/sosButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rh_textView"
                            android:layout_gravity="end"
                            android:background="@color/ColorSecondary"
                            android:fontFamily="sans-serif"
                            android:padding="10dp"
                            android:text="Offline Request"
                            android:textAlignment="center"
                            android:textColor="#FFF" />

                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/registerCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logsCard"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:translationZ="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:elevation="10dp">

                    <RelativeLayout
                        android:id="@+id/registerHeading"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/colorPrimaryDark"
                        android:translationZ="2dp">

                        <View
                            android:id="@+id/divider2"
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:background="#FFF" />

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="13dp"
                            android:layout_toRightOf="@+id/divider2"
                            android:layout_weight="1"
                            android:text="Register"
                            android:textColor="#FFF"
                            android:textSize="14dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/registerLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/registerHeading"
                        android:paddingHorizontal="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:translationZ="2dp">

                        <Button
                            android:id="@+id/register_vehicle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/border_button"
                            android:fontFamily="sans-serif"
                            android:padding="10dp"
                            android:text="VEHICLE"
                            android:textAlignment="center"
                            android:textColor="@color/ColorSecondary" />

                        <Button
                            android:id="@+id/register_hospital"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/register_vehicle"
                            android:background="@drawable/border_button"
                            android:fontFamily="sans-serif"
                            android:padding="10dp"
                            android:text="HOSPITAL"
                            android:textAlignment="center"
                            android:textColor="@color/ColorSecondary" />

                    </RelativeLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/allocateVehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/registerCard"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="25dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="sans-serif"
                android:padding="10dp"
                android:text="Allocate Vehicle"
                android:textAlignment="center"
                android:textColor="#FFF" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
